  // â–º AdÄ±m 2: Basit duygu analizi iÃ§in kelime listeleri
  const keywords = {
    pozitif: ["mutlu","iyi", "sev", "gÃ¼zel", "harika", "memnun", "tamam"],
    negatif: ["Ã¼zgÃ¼n","kÄ±rgÄ±n","sinir", "kÃ¶tÃ¼", "nefret", "acÄ±", "kabus"],
    duygusal: ["hisset", "kalp", "gÃ¶nÃ¼l", "aÄŸla", "sevg"],
    mantÄ±ksal: ["dÃ¼ÅŸÃ¼n", "mantÄ±k", "akÄ±l", "analiz", "sebep", "sonuÃ§"],
    karmaÅŸÄ±k: ["ayrÄ±ntÄ±", "derin", "Ã§Ã¶zÃ¼m", "katmanlÄ±", "detaylÄ±"]
  };

  function analyzePolarity(text) {
    let score = 0;
    text.toLowerCase().split(/\W+/).forEach(word => {
      if (keywords.pozitif.includes(word)) score += 1;
      if (keywords.negatif.includes(word)) score -= 1;
    });
    return score;
  }
  function analyzeSubjectivity(text) {
    let p = 0, m = 0;
    text.toLowerCase().split(/\W+/).forEach(word => {
      if (keywords.duygusal.includes(word)) p += 1;
      if (keywords.mantÄ±ksal.includes(word)) m += 1;
    });
    if (p + m === 0) return 0.5;
    return p / (p + m);
  }
  function analyzeComplexity(text) {
    return text.split(" ").filter(w => keywords.karmaÅŸÄ±k.includes(w.toLowerCase())).length;
  }

  // â–º Analiz ve taklit
  document.getElementById('analyzeBtn').onclick = function() {
    let traits = { pozitiflik:0, negatiflik:0, tarafsÄ±zlÄ±k:0, duygusallÄ±k:0, rasyonellik:0, karmaÅŸÄ±klÄ±k:0 };
    const inputs = form.querySelectorAll('textarea');
    inputs.forEach(t => {
      const v = t.value;
      const pol = analyzePolarity(v);
      const subj = analyzeSubjectivity(v);
      const comp = analyzeComplexity(v);
      if (pol > 0) traits.pozitiflik += pol;
      else if (pol < 0) traits.negatiflik += -pol;
      else traits.tarafsÄ±zlÄ±k += 1;
      if (subj > 0.5) traits.duygusallÄ±k += subj;
      else traits.rasyonellik += (1-subj);
      traits.karmaÅŸÄ±klÄ±k += comp;
    });

    const total = Object.values(traits).reduce((a,b)=>a+b, 0) || 1;
    Object.keys(traits).forEach(k => traits[k] = (traits[k]/total*100).toFixed(2));

    // Taklit et
    const tone = traits.pozitiflik > traits.negatiflik 
      ? "Ä°yimser bir bakÄ±ÅŸ aÃ§Ä±sÄ±yla deÄŸerlendiriyorum." 
      : (traits.negatiflik > traits.pozitiflik 
        ? "Bu konuda temkinliyim." 
        : "Dengeli bir yaklaÅŸÄ±m benimsiyorum.");
    const emotion = traits.duygusallÄ±k > traits.rasyonellik 
      ? "DuygularÄ±m Ã¶n planda." 
      : "MantÄ±k aÄŸÄ±rlÄ±klÄ± dÃ¼ÅŸÃ¼nÃ¼yorum.";
    const complexity = traits.karmaÅŸÄ±klÄ±k > 1 
      ? "Konuya detaylÄ± yaklaÅŸmak isterim." 
      : "BasitÃ§e dÃ¼ÅŸÃ¼nmeyi tercih ederim.";
    const simAnswer = `${tone} ${emotion} ${complexity}`;

    // GÃ¶ster
    document.getElementById('traits').innerHTML = Object.entries(traits)
      .map(([k,v]) => `<div class="trait"><strong>${k}:</strong> ${v}%</div>`).join("");
    document.getElementById('simQuestion').innerText = "Hayatta baÅŸarÄ±yÄ± neye borÃ§luyuz sence?";
    document.getElementById('simAnswer').innerText = simAnswer;
    document.getElementById('result').style.display = 'block';
  }
