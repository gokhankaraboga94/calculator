    const questionSet = {
      duygusal: ["Seni en son ne aÄŸlattÄ±?", "Hayal kÄ±rÄ±klÄ±klarÄ±nÄ± nasÄ±l atlatÄ±rsÄ±n?", "YanlÄ±ÅŸ anlaÅŸÄ±ldÄ±ÄŸÄ±nda ne hissedersin?", "DuygularÄ±nÄ± aÃ§Ä±k mÄ± sÃ¶ylersin?", "GÃ¼vene ne kadar Ã§abuk yanaÅŸÄ±rsÄ±n?"],
      ahlaki: ["Yalan sÃ¶ylemek hiÃ§ doÄŸru mu?", "DoÄŸru ama zararlÄ± ÅŸey yapar mÄ±sÄ±n?", "SuÃ§u Ã¼stlenir misin?", "Adalet mi sadakat mi daha Ã¶nemli?", "Ä°kinci ÅŸans verilir mi?"],
      dÃ¼ÅŸÃ¼nsel: ["Ä°nsan doÄŸasÄ± nedir?", "GerÃ§eÄŸe ulaÅŸmak iÃ§in ne gerekir?", "Her bilgi sorgulanÄ±r mÄ±?", "Hayatta anlam aramak ÅŸart mÄ±?", "DÃ¼ÅŸÃ¼ncelerini ne sÄ±klÄ±kta sorgularsÄ±n?"],
      sosyal: ["Toplum bireyi nasÄ±l etkiler?", "YalnÄ±z mÄ± kalabalÄ±k mÄ± sana gÃ¶re?", "Sosyal medyanÄ±n etkisi nedir?", "Liderlikten hoÅŸlanÄ±r mÄ±sÄ±n?", "KalabalÄ±kta kendini yalnÄ±z hisseder misin?"],
      gÃ¼ndelik: ["GÃ¼nÃ¼nÃ¼ nasÄ±l planlarsÄ±n?", "Stres sonrasÄ± ne yaparsÄ±n?", "DÃ¼zen mi daÄŸÄ±nÄ±klÄ±k mÄ± sana uygun?", "SabahÃ§Ä± mÄ±sÄ±n gece kuÅŸu mu?", "ZamanÄ± mÄ± planlarsÄ±n akÄ±ÅŸa mÄ± bÄ±rakÄ±rsÄ±n?"],
      dil: ["Ä°roni yapar mÄ±sÄ±n? Ne zaman?", "Kelimelerin gÃ¼cÃ¼ne inanÄ±r mÄ±sÄ±n?", "Ä°letiÅŸim tarzÄ±n nasÄ±l?", "YazÄ±lÄ± mÄ± sÃ¶zlÃ¼ mÃ¼ etkili?", "SessizliÄŸe mi yoksa konuÅŸmaya mÄ± deÄŸer verirsin?"]
    };

    const form = document.getElementById('charForm');
    for (let sec in questionSet) {
      const divSec = document.createElement('div');
      divSec.className = 'section';
      divSec.innerHTML = `<h2>${sec.toUpperCase()}</h2>`;
      questionSet[sec].forEach(q => {
        const d = document.createElement('div');
        d.className = 'question';
        d.innerHTML = `<label>${q}</label><textarea name="${q}" required></textarea>`;
        divSec.appendChild(d);
      });
      form.appendChild(divSec);
    }

    const keywords = {
      pozitif: ["mutlu","iyi","sev","gÃ¼zel","harika","memnun","tamam"],
      negatif: ["Ã¼zgÃ¼n","kÄ±rgÄ±n","sinir","kÃ¶tÃ¼","nefret","acÄ±","kabus"],
      duygusal: ["hisset","aÄŸla","sevg","kalp","gÃ¶nÃ¼l"],
      mantÄ±ksal: ["dÃ¼ÅŸÃ¼n","mantÄ±k","akÄ±l","analiz","sebep","sonuÃ§"],
      karmaÅŸÄ±k: ["ayrÄ±ntÄ±","derin","katmanlÄ±","detaylÄ±","Ã§Ã¶zÃ¼m"]
    };

    function analyzePolarity(t) {
      let s=0;
      t.toLowerCase().split(/\W+/).forEach(w=>{
        if(keywords.pozitif.includes(w)) s++;
        if(keywords.negatif.includes(w)) s--;
      });
      return s;
    }
    function analyzeSubjectivity(t){
      let p=0,m=0;
      t.toLowerCase().split(/\W+/).forEach(w=>{
        if(keywords.duygusal.includes(w)) p++;
        if(keywords.mantÄ±ksal.includes(w)) m++;
      });
      return p+m? p/(p+m):0.5;
    }
    function analyzeComplexity(t){
      let c=0;
      t.toLowerCase().split(/\W+/).forEach(w=>{
        if(keywords.karmaÅŸÄ±k.includes(w)) c++;
      });
      return c;
    }

    document.getElementById('analyzeBtn').addEventListener('click',()=>{
      const traits = {poz:0,neg:0,tar:0,duyg:0,raz:0,kar:0};
      form.querySelectorAll('textarea').forEach(f=>{
        const v=f.value;
        const p=analyzePolarity(v), s=analyzeSubjectivity(v), c=analyzeComplexity(v);
        if(p>0) traits.poz+=p;
        else if(p<0) traits.neg+=-p;
        else traits.tar++;
        if(s>0.5) traits.duyg+=s;
        else traits.raz+=(1-s);
        traits.kar+=c;
      });
      const total=traits.poz+traits.neg+traits.tar+traits.duyg+traits.raz+traits.kar||1;
      const out = {
        Pozitiflik: ((traits.poz/total)*100).toFixed(2),
        Negatiflik: ((traits.neg/total)*100).toFixed(2),
        TarafsÄ±zlÄ±k: ((traits.tar/total)*100).toFixed(2),
        DuygusallÄ±k: ((traits.duyg/total)*100).toFixed(2),
        Rasyonellik: ((traits.raz/total)*100).toFixed(2),
        KarmaÅŸÄ±klÄ±k: ((traits.kar/total)*100).toFixed(2)
      };
      let tone = out.Pozitiflik > out.Negatiflik ? "Ä°yimser bakÄ±yorum." : (out.Negatiflik > out.Pozitiflik ? "Tedbirli yaklaÅŸÄ±yorum." : "Dengeyi koruyorum.");
      let emotion = out.DuygusallÄ±k > out.Rasyonellik ? "DuygularÄ±m aÄŸÄ±r basar." : "MantÄ±kla karar veririm.";
      let complexity = traits.kar>1 ? "Detaylara Ã¶nem veririm." : "Basit dÃ¼ÅŸÃ¼nmeyi tercih ederim.";

      document.getElementById('traits').innerHTML = Object.entries(out).map(([k,v])=>`<div class="trait"><strong>${k}:</strong> ${v}%</div>`).join('');
      document.getElementById('simQuestion').innerText = "Hayatta baÅŸarÄ±yÄ± neye borÃ§luyuz sence?";
      document.getElementById('simAnswer').innerText = `${tone} ${emotion} ${complexity}`;
      document.getElementById('result').style.display = 'block';
      window.scrollTo(0,document.body.scrollHeight);
    });
